<nav class="navbar" role="navigation" aria-label="main navigation">
  <div class="navbar-brand">
    <%= link_to root_path, class: 'navbar-item' do %>
      <h1 class="title">Inscriptions Platform</h1>
    <% end %>
  </div>

  <div class="navbar-menu">
    <div class="navbar-start">
      <%= link_to 'Home', root_path, class: 'navbar-item' %>
      <%= link_to 'Teachers', teachers_path, class: 'navbar-item' %>
    </div>

    <div class="navbar-end">
      <% if current_teacher %>
        <div class="navbar-item has-dropdown is-hoverable">
          <a class="navbar-link">
            <%= current_teacher.name %>
          </a>

          <div class="navbar-dropdown is-right">
            <%= link_to 'Sign out', destroy_teacher_session_path, method: :delete, class: 'navbar-item' %>
          </div>
        </div>
      <% else %>
        <div class="navbar-item">
          <div class="buttons">
            <%= link_to 'Sign up', new_teacher_registration_path, class: 'button is-primary' %>
            <%= link_to 'Log in', new_teacher_session_path, class: 'button is-light' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</nav>
